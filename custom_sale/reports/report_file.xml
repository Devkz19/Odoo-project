<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- QWeb Template for Custom Sales Report -->
    <template id="report_custom_quotation_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Custom Sales Quotation Report</h2>
                            
                    </div>
                </t>
            </t>
        </t>
    </template>

    <!-- Report: Custom Quotation Report -->
    <record id="action_report_custom_quotation" model="ir.actions.report">
        <field name="name">Custom Quotation Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_sale.report_custom_quotation_document</field>
        <field name="report_file">custom_sale.report_custom_quotation_document</field>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'Quotation - %s' % object.name</field>
    </record>
    
</odoo>