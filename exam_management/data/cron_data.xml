        <field name="name">Exam Remainder</field>
        <field name="model_id" ref="exam_management.model_student_exam_assignment"/>
        <field name="state">code</field>
        <field name="code">model.send_exam_reminder_email()</field>
        <field name='interval_number'>1</field>
        <field name='interval_type'>days</field>
        <field name="priority">5</field>
        <field name="active" eval="True"/>
    </record>
</odoo>
