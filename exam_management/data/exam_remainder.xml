<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="mail_template_exam_reminder_assignment" model="mail.template">
        <field name="name">Exam Assignment Reminder</field>
        <field name="model_id" ref="exam_management.model_student_exam_assignment"/>
        <field name="subject">Exam Reminder: Tomorrow's Exam - {{ object.exam_id.exam_name }}</field>
        <field name="email_to">{{ object.student_id.email }}</field>
        <field name="email_from">{{ user.email or 'noreply@college.com' }}</field>
        <field name="description">Email sent to student a day before an exam with all subject details</field>

        <field name="body_html" type="html">
            <div style="font-family: Arial, sans-serif; font-size: 14px; color: #333; max-width: 600px; margin: 0 auto;">
                <h2 style="color: #2c3e50; border-bottom: 2px solid #3498db; padding-bottom: 10px;">
                    üìö Exam Reminder
                </h2>
                
                <p>Dear <strong><t t-out="object.student_id.student_name or 'Student'"/></strong>,</p>

                <p>This is a friendly reminder that you have an exam scheduled for <strong>tomorrow</strong>.</p>
                
                <div style="background-color: #f8f9fa; padding: 20px; border-left: 4px solid #3498db; margin: 20px 0;">
                    <h3 style="margin-top: 0; color: #3498db;">üìù Exam Details</h3>
                    <table style="width: 100%; border-collapse: collapse;">
                        <tr>
                            <td style="padding: 8px 0; width: 40%;"><strong>Exam Name:</strong></td>
                            <td style="padding: 8px 0;"><t t-out="object.exam_id.exam_name or 'N/A'"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px 0;"><strong>Date:</strong></td>
                            <td style="padding: 8px 0;"><t t-out="object.exam_id.exam_start_date or 'N/A'"/></td>
                        </tr>
                        <tr>
                            <td style="padding: 8px 0;"><strong>Time:</strong></td>
                            <td style="padding: 8px 0;">
                                <t t-out="'%02d:%02d' % (int(object.exam_id.exam_time or 0), int((object.exam_id.exam_time % 1) * 60))"/>
                            </td>
                        </tr>
                        <tr>
                            <td style="padding: 8px 0;"><strong>Duration:</strong></td>
                            <td style="padding: 8px 0;"><t t-out="object.exam_id.duration or 0"/> hours</td>
                        </tr>
                        <tr>
                            <td style="padding: 8px 0;"><strong>Course:</strong></td>
                            <td style="padding: 8px 0;">
                                <t t-out="dict(object.exam_id._fields['course']._description_selection(object.env)).get(object.exam_id.course, 'N/A') if object.exam_id.course else 'N/A'"/>
                            </td>
                        </tr>
                    </table>
                </div>

                <!-- Subjects assigned to this student -->
                <div style="background-color: #e7f3ff; padding: 20px; border-left: 4px solid #2196F3; margin: 20px 0;">
                    <h3 style="margin-top: 0; color: #1976D2;">üìñ Your Assigned Subjects</h3>
                    
                    <t t-set="assignments" t-value="ctx.get('student_assignments') or [object]"/>
                    
                    <table style="width: 100%; border-collapse: collapse; margin-top: 10px;">
                        <thead>
                            <tr style="background-color: #1976D2; color: white;">
                                <th style="padding: 10px; text-align: left; border: 1px solid #ddd;">Subject</th>
                                <th style="padding: 10px; text-align: center; border: 1px solid #ddd;">Total Marks</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="assignments" t-as="assignment">
                                <tr style="background-color: white;">
                                    <td style="padding: 10px; border: 1px solid #ddd;">
                                        <t t-out="assignment.subject_id.name or 'N/A'"/>
                                    </td>
                                    <td style="padding: 10px; text-align: center; border: 1px solid #ddd;">
                                        <t t-out="assignment.subject_id.total_marks or 'N/A'"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>

                <!-- General reminders -->
                <div style="background-color: #d1ecf1; padding: 15px; border-left: 4px solid #0c5460; margin: 20px 0;">
                    <h4 style="margin-top: 0; color: #0c5460;"> Things to Remember:</h4>
                    <ul style="margin: 10px 0; padding-left: 20px;">
                        <li>Please arrive at least 15-30 minutes before the exam starts</li>
                        <li>Bring your ID card and hall ticket</li>
                        <li>Ensure you have all necessary stationery and materials</li>
                        <li>Mobile phones and electronic devices are not allowed in the exam hall</li>
                        <li>Read all instructions carefully before starting</li>
                    </ul>
                </div>

                <p style="font-size: 16px; color: #27ae60; font-weight: bold; text-align: center;">
                    üéì Best of luck with your exam!
                </p>

                <hr style="border: none; border-top: 1px solid #ddd; margin: 30px 0;"/>
                
                <p style="font-size: 12px; color: #7f8c8d; text-align: center;">
                    <strong>Exam Management Team</strong><br/>
                    This is an automated reminder. Please do not reply to this email.
                </p>
            </div>
        </field>

        <field name="auto_delete" eval="True"/>
    </record>
</odoo>