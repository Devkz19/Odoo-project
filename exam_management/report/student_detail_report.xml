<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <!-- QWeb Template for Exam Admit Card -->
    <template id="student_detail_qweb_template">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-call="web.external_layout">
            <div class="page">
              <!-- Header -->
              <h2 style="text-align:center; background-color:#3f51b5; color:white; padding:10px; border-radius:5px;">
                Student Detail Report
              </h2>
              
              <div style="border:1px solid #ddd; border-radius:10px; padding:20px; margin-top:10px; font-size:14px;">
                
                <!-- Student Details -->
                <div class="row">
                  <!-- Photo Column -->
                  <div class="col-3">
                    <img t-if="o.image_1920" t-att-src="image_data_uri(o.image_1920)" style="max-width: 150px; border-radius: 10px; border: 1px solid #ddd;"/>
                    <img t-if="not o.image_1920" src="/web/static/img/placeholder.png" style="max-width: 150px; border-radius: 10px; border: 1px solid #ddd;"/>
                  </div>
                  <!-- Details Column -->
                  <div class="col-9">
                    <h4 style="margin-bottom:10px; border-bottom:1px solid #ccc; padding-bottom:5px;">
                      Student Details
                    </h4>
                    <table style="width:100%; line-height:1.8;">
                      <tr>
                        <td><strong>Name:</strong></td>
                        <td><span t-field="o.student_name"/></td>
                      </tr>
                  <tr>
                    <td><strong>Enrollment Number:</strong></td>
                    <td><span t-field="o.student_id"/></td>
                  </tr>
                  <tr>
                    <td><strong>Email:</strong></td>
                    <td><span t-field="o.email"/></td>
                  </tr>
                  <tr>
                    <td><strong>Phone:</strong></td>
                    <td><span t-field="o.phone"/></td>
                  </tr>
                  <tr>
                    <td><strong>Course:</strong></td>
                    <td><span t-field="o.course"/></td>
                  </tr>
                  <tr>
                    <td><strong>Class and Semester:</strong></td>
                    <td><span t-field="o.class_semester"/></td>
                  </tr>
                </table>
                
                <br/>
              </div>
            </div>
            </div>
            </div>
          </t>
        </t>
      </t>
    </template>

    <!-- Report Action -->
    <record id="action_student_report_qweb_template" model="ir.actions.report">
      <field name="name">Student Detail Report</field>
      <field name="model">student.registration</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">exam_management.student_detail_qweb_template</field>
      <field name="report_file">exam_management.student_detail_qweb_template</field>
      <field name="print_report_name">'Student Detail'</field>
      <field name="binding_model_id" ref="model_student_registration"/>
      <field name="binding_type">report</field>
      <field name="multi">True</field>
    </record>
    
  </data>
</odoo>
