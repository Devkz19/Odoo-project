<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Form View -->
    <record id="view_student_form" model="ir.ui.view">
        <field name="name">training.student.form</field>
        <field name="model">training.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"
                            invisible="status != 'draft'"/>
                    <button name="action_set_alumni" type="object" string="Set as Alumni" class="btn-primary"
                            invisible="status != 'confirm'"/>
                    <button name="action_reset_draft" type="object" string="reset to Draft" class="btn-secondary"
                            invisible="status == 'draft'"/>     

                    <field name="status" widget="statusbar" clickable="1" 
                           options="{'clickable': True}"
                        statusbar_visible="draft,confirm,alumni"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="course"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

             <!-- List View -->
    <record id="view_student_list" model="ir.ui.view">
        <field name="name">training.student.list</field>
        <field name="model">training.student</field>
        <field name="arch" type="xml">
            <list string="teachers">
                <field name="name"/>
                <field name="age"/>
                <field name="course"/>
            </list>
        </field>
    </record>

       <!-- Search view for Student by Course -->
    <record id="view_student_search" model="ir.ui.view">
          <field name="name">training.student.search</field>
        <field name="model">training.student</field>
        <field name="arch" type="xml">
            <search>
                <!-- Quick search fields -->
                <field name="name" string="Name"/>
                <field name="course" string="Course"/>

                <group expand="0" string="Group By">
                <filter string="Course" name="group_by_course" context="{'group_by':'course'}"/>
            </group>

            </search>
        </field>
    </record>

          <!-- Graph View -->
    <record id="view_student_graph" model="ir.ui.view">
          <field name="name">training.student.graph</field>
        <field name="model">training.student</field>
        <field name="arch" type="xml">
            <graph string="Student count by Course" type="bar">
            <field name="course" type="row"/>            
            <field name="id" type="measure" operator="count"/>  
        </graph>
        </field>
    </record>

     <!-- Kanban View -->
    <record id="view_student_kanban" model="ir.ui.view">
       <field name="name">training.student.kanban</field>
        <field name="model">training.student</field>
        <field name="arch" type="xml">
            <kanban default_group_by="course">
                <field name="name"/>
                <field name="age"/>
                <field name="course"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <strong>
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div>
                                <span>Age: </span>
                                <field name="age"/>
                            </div>
                            <div>
                                <span>Course: </span>
                                <field name="course"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

          <!-- Action -->
    <record id="action_training_student" model="ir.actions.act_window">
        <field name="name">Training Student</field>
        <field name="res_model">training.student</field>
        <field name="view_mode">list,form,kanban,search,graph</field>
        <field name="target">current</field>
    </record>

    <!-- Menu -->
   
    <menuitem id="menu_student" name="Student"
              parent="menu_training_root"
              action="action_training_student"
              sequence="2"
              groups="teacher.group_training_management"/>


</odoo>
