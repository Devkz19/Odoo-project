<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="restaurent_staff_sale_order_form_view" model="ir.ui.view">
        <field name="name">restaurent.staff.sale.order.form.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="test" />
                <field name="staff_id" />
            </xpath>
             <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
             <xpath expr="//notebook" position="inside">
                <page string="Staff">
                    <group>
                <field name="test" />
                <field name="staff_id" />   
                    </group>                              
                </page>
            </xpath>
        </field>
    </record>

    <record id="restaurent_staff_sale_order_list_view" model="ir.ui.view">
        <field name="name">restaurent.staff.sale.order.list.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="test" />
                <field name="staff_id" />
            </xpath>
        </field>

    </record>

    <record id="restaurent_staff_sale_order_search_view" model="ir.ui.view">
        <field name="name">restaurent.staff.sale.order.search.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation" />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="test" />
                <field name="staff_id" />
            </xpath>
        </field>

    </record>
 
</odoo>